<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>sr_marcas</servlet-name>
        <servlet-class>Controlador.sr_marcas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_proveedores</servlet-name>
        <servlet-class>Controlador.sr_proveedores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_puestos</servlet-name>
        <servlet-class>Controlador.sr_puestos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_clientes</servlet-name>
        <servlet-class>Controlador.sr_clientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_empleados</servlet-name>
        <servlet-class>Controlador.sr_empleados</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sr_marcas</servlet-name>
        <url-pattern>/sr_marcas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_proveedores</servlet-name>
        <url-pattern>/sr_proveedores</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_puestos</servlet-name>
        <url-pattern>/sr_puestos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_clientes</servlet-name>
        <url-pattern>/sr_clientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_empleados</servlet-name>
        <url-pattern>/sr_empleados</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
